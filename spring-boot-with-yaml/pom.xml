<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <artifactId>configservice</artifactId>
  <groupId>io.fabric8</groupId>
  <version>4.0.0</version>
  <packaging>jar</packaging>

  <properties>
    <docker.repository.uri>nexusrepo.mda.ca:9002</docker.repository.uri>
    <csci>syi</csci>
    <csc>sym</csc>
  </properties>

  <parent>
    <groupId>org.springframework.boot</groupId>
    <artifactId>spring-boot-starter-parent</artifactId>
    <version>1.3.6.RELEASE</version>
  </parent>

  <name>Fabric8 Maven :: Sample :: Spring Boot Web</name>
  <description>Minimal Example with Spring Boot</description>

  <dependencies>

    <!-- Boot generator  -->
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-web</artifactId>
    </dependency>

    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-actuator</artifactId>
    </dependency>

    <dependency>
      <groupId>org.jolokia</groupId>
      <artifactId>jolokia-core</artifactId>
    </dependency>

  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-maven-plugin</artifactId>
      </plugin>


      <plugin>
        <groupId>io.fabric8</groupId>
        <artifactId>fabric8-maven-plugin</artifactId>
        <version>4.0.0</version>

        <configuration>
          <images>
            <image>
              <name>${docker.repository.uri}/${csci}/${csc}/${project.artifactId}:${project.version}</name>
              <alias>${project.artifactId}</alias>
              <build>
                <from>openjdk:11-jre</from>

                <tags>
                  <tag>latest</tag>
                  <tag>${project.version}</tag>
                </tags>

                <ports>
                  <port>8080</port>
                </ports>

                <assembly>
                  <mode>dir</mode>
                  <name>deployment</name>
                  <descriptorRef>artifact</descriptorRef>
                </assembly>

                <entryPoint>
                  <exec>
                    <arg>java</arg>
                    <arg>-jar</arg>
                    <arg>/deployment/${project.build.finalName}.jar</arg>
                  </exec>
                </entryPoint>
              </build>
            </image>
          </images>

<!--          <generator>-->
<!--            <includes>-->
<!--              <include>spring-boot</include>-->
<!--            </includes>-->
<!--            <config>-->
<!--              <spring-boot>-->
<!--                <from>openjdk:11-jre</from>-->
<!--                <cmd>jar /deployments/${project.build.finalName}</cmd>-->
<!--              </spring-boot>-->
<!--            </config>-->
<!--          </generator>-->

          <namespace>spring-boot-ns</namespace>

          <resources>
            <labels>
              <all>
                <csci>${csci}</csci>
                <csc>${csc}</csc>
              </all>
            </labels>
          </resources>

          <enricher>
            <includes>
              <include>fmp-portname</include>
            </includes>
            <excludes>
              <exclude>build</exclude>
            </excludes>
            <config>
              <f8-service>
                <port>8080</port>
                <type>NodePort</type>
              </f8-service>
            </config>
          </enricher>
        </configuration>

        <executions>
          <execution>
            <goals>
              <goal>resource</goal>
              <goal>build</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

    </plugins>
  </build>

</project>
